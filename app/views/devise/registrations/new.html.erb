<div class="container">


      <div class="left">

        <h1> Uniform</h1>
        <h3> L'inscription devient plus simple</h3>

        <ul>
          <li> Un seul formulaire pour toutes les écoles</li>
          <li>Gérez facilement vos candidatures</li>
          <li> Stockez vos données scolaires</li>


        </ul>



      </div>



      <div class="right">

        <h2 class="creer">Créer un compte</h2>

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

         <div class="field">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "test", placeholder: "Adresse email" %>
         </div>


          <div class="field">
              <%= f.password_field :password, autocomplete: "off", class: "test", placeholder: "Mot de passe" %>
          </div>



           <div class="field">
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "test", placeholder: "Confirmer le mot de passe" %>
           </div>



           <div>
              <%= f.submit "Créer un compte", class: "actions1" %>
           </div>


    <% end %>

      <%= render "devise/shared/links" %>

      </div>

</div>