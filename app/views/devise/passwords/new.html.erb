<h2 class="creer">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "test1", placeholder: "Adresse email" %>
  </div>

  <div class="align">
    <%= f.submit "Send me reset password instructions", class: "actions2" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
